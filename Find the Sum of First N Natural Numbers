#include<iostream>
using namespace std;

int main() {
    int n, sum = 0;

    cout << "Enter a number: ";
    cin >> n;

    for (int i = 1; i <= n; i++)
        sum += i;

    cout << "Sum of first " << n << " natural numbers is: " << sum << endl;

    return 0;
}

output:-

Enter a number: 5
Sum of first 5 natural numbers is: 15
